#include <stdio.h>
#include <ctype.h>
#include "main.h"


/**
 * _isupper - check if argument passed is uppercase
 * @c: first argument
 *
 * Return: 1 if uppercase, 0 if otherwise
 */


int _isupper(int c)
{
if (isupper(c))
{
return (1);
}
else
{
return (0);
}
}

int main(void)
{
printf("%d\n", _isupper('a'));
return (0);
}
